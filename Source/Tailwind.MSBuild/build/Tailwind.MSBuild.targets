<?xml version="1.0" encoding="utf-8" ?>
<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

	<Target Name="BeforeCompile" Outputs="$(GeneratedCssFile)">
		<InitializeTailwind Version="$(TailwindVersion)" RootInstallPath="$(TailwindInstallPath)">
			<Output TaskParameter="StandaloneCliPath" PropertyName="StandaloneCliPath" />
		</InitializeTailwind>

		<BuildTailwindCss TailwindConfigDir="$(TailwindConfigDir)"
						  StandaloneCliPath="$(StandaloneCliPath)"
						  TailwindConfigFile="$(TailwindConfigFile)"
						  InputFileName="$(TailwindInputFile)"
						  OutputFilePath="$(TailwindOutputFile)"
						  Minify="$(TailwindMinify)">
			<Output TaskParameter="GeneratedCssFile" PropertyName="GeneratedCssFile" />
		</BuildTailwindCss>
	</Target>
	
</Project>